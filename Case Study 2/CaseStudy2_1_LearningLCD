#include <Wire.h> 
#include <LiquidCrystal_I2C.h>

// Set the LCD address to 0x27 for a 16 chars and 2 line display
LiquidCrystal_I2C lcd(0x27, 16, 2);
int x=0;

void setup()
{
	// initialize the LCD
	lcd.begin();

	// Turn on the blacklight and print a message.
	lcd.backlight();

}

void loop()
{
	// Do nothing here...
  for (x=0; x<5;x++){
   lcd.clear();
   lcd.print("Learn LCD 16x2");

   lcd.setCursor(x, 1);
   lcd.print("Hallo!");
   delay(2000);
  }
}
